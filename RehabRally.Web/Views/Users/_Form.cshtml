@model UserFormViewModel

<form asp-action="@(string.IsNullOrEmpty(Model?.Id) ?"Create":"Edit")"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">
    @if (!string.IsNullOrEmpty(Model?.Id))
    {
        <input type="hidden" asp-for="Id" />
    }
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="FullName" asp-for="FullName" />
            <label asp-for="FullName"></label>
        </div>
        <span asp-validation-for="FullName" class="text-danger d-block"></span>
    </div>      
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="UserName" asp-for="UserName" />
            <label asp-for="UserName"></label>
        </div>
        <span asp-validation-for="UserName" class="text-danger d-block"></span>
    </div>
    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="Email" asp-for="Email" />
            <label asp-for="Email"></label>
        </div>
        <span asp-validation-for="Email" class="text-danger d-block"></span>
    </div>

    <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="text" class="form-control form-control-solid" placeholder="Mobile Number" asp-for="MobileNumber" />
            <label asp-for="MobileNumber"></label>
        </div>
        <span asp-validation-for="MobileNumber" class="text-danger d-block"></span>

    </div>
       <div class="mb-5">
        <div class="form-floating mb-2">
            <input type="number" class="form-control form-control-solid" placeholder="Mobile Number" asp-for="Age" />
            <label asp-for="Age"></label>
        </div>
        <span asp-validation-for="Age" class="text-danger d-block"></span>

    </div>

    @if (string.IsNullOrEmpty(Model?.Id))
    {
        <div class="mb-5">
            <div class="form-floating mb-2">
                <input type="Password" class="form-control form-control-solid" placeholder="Password" asp-for="Password" />
                <label asp-for="Password"></label>
            </div>
            <span asp-validation-for="Password" class="text-danger d-block"></span>
        </div>
        <div class="mb-5">
            <div class="form-floating mb-2">
                <input type="password" class="form-control form-control-solid" placeholder="ConfirmPassword" asp-for="ConfirmPassword" />
                <label asp-for="ConfirmPassword"></label>
            </div>
            <span asp-validation-for="ConfirmPassword" class="text-danger d-block"></span>
        </div>
    }
    <partial name="_ModalFooter" />
</form>
