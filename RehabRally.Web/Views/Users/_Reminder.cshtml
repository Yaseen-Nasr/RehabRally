@model UserReminderViewModel

<form asp-controller="Users"
      data-ajax-method="post"
      data-ajax="true"
      data-ajax-begin="onModalBegin"
      data-ajax-success="onModalSuccess"
      data-ajax-failure="showErrorMessage"
      data-ajax-complete="onModalComplete">

    <input type="hidden" asp-for="UserId" />
    <div class="mb-5">
        <div class="form-floating mb-2"> 
                 <div class="form-floating mb-2">
                <select class="form-select form-select-solid js-select2"  data-placeholder="Select Notify Type"  asp-for="NotificationType" asp-items="@Model.NotificationTypeList">
                <option value="">Select category</option>
            </select>
            <label asp-for="NotificationType"></label>
        </div>
        <span asp-validation-for="NotificationType" class="text-danger d-block"></span>
        </div> 
    </div>
    
    <partial name="_ModalFooter" />
</form>